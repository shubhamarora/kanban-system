{{#if isDisplay}}
    <div class="create-dialog shadow--2dp">
        <header class="create-dialog__header">
            <h4 class="create-dialog__title">Create Project</h4>
            <span class="close-icon" {{action "closeDialog" bubbles=false}}>&#10005;</span>
        </header>
        <div class="create-dialog__content">
            <div class="form-group">
                <label class="form-group__label">Title</label>
                {{input class="form-group__input" type="text" placeholder="Task Title..." }}
            </div>
            <div class="form-group">
                <label class="form-group__label">Description</label>
                {{textarea class="form-group__textarea" type="text" placeholder="Start Typing..." }}
            </div>
            <div class="form-group">
                <label class="form-group__label">Members</label>
                {{searchable-select
                content=membersList
                sortBy="title"
                multiple=true
                prompt="Select"
                className="Some-class"
                on-change=(action "updateMemberList")}}
            </div>
        </div>
        <footer class="create-dialog__footer">
            <button class="primary-button" {{action "closeDialog" bubbles=false}}>Cancel</button>
            <button class="primary-button create-button">Create</button>
        </footer>
    </div>
{{/if}}